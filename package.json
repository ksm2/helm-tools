  "type": "module",
  "license": "MIT",
  "bin": {
    "helm-tools": "./lib/main.js"
  },
  "scripts": {
    "test": "yarn test:format && yarn test:unit",
    "test:format": "prettier --check README.md src/**/*.ts tests/**/*.ts",
    "test:unit": "jest",
    "clean": "rimraf lib",
    "build": "tsc --project tsconfig.build.json",
