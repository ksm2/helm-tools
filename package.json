    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.3",
    "@types/semver": "^7.3.12",
    "@types/source-map-support": "^0.5.6",
    "@types/tar": "^6.1.3",
    "jest": "^29.2.1",
    "memfs": "^3.4.9",
